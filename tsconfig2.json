{
  "compilerOptions": {
    "outDir": "./lib/",
    "inlineSources": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./declarations",
    "stripInternal": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}